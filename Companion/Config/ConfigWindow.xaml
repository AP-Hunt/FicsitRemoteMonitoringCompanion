<Window x:Class="Companion.Config.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Companion.Config"
        mc:Ignorable="d"
        Title="Configuration" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight">
    <StackPanel Margin="5">
        <Label FontWeight="Bold">Satisfactory game directory</Label>
        <TextBlock TextWrapping="WrapWithOverflow" Width="250" HorizontalAlignment="Left" Margin="5,5,0,5">Choose the path to your Satisfactory game directory.From this, Ficsit Remote Montioring Companion will detect Ficsit Remote Monitoring configuration.</TextBlock>
        <WrapPanel Orientation="Horizontal" VerticalAlignment="Stretch">
            <TextBox x:Name="txtSatisfactoryGameDir" Width="250"></TextBox>
            <Button Name="btnFindGameDir" VerticalAlignment="Stretch" Click="btnFindGameDir_Click" Width="50">Find</Button>
        </WrapPanel>
        <Button Name="btnOK" Click="btnOK_Click">OK</Button>
    </StackPanel>
</Window>
